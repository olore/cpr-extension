{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "*://developer.mozilla.org/*",
    "activeTab",
    "storage",
    "tabs",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*/pull/*",
        "*://*/*/issues/*",
        "*://*/*/pull-requests/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ]
    }
  ]
}


