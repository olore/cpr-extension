{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "icons/icon-16.png",
    "128": "icons/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "*://developer.mozilla.org/*",
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "*://*/*/pull/*",
        "*://*/*/pull-requests/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "PRS-A - Pull Request Sentiment Analyzer",
    "default_icon": {
      "16": "icons/brain.png",
      "32": "icons/brain.png"
    }
  }
}


